{
  "compilerOptions": {
    "strict": true,
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "outDir": "dist",
    // allow the tsc to include JS files while we migrate
    // to typescript.
    "allowJs": true
  },
  "include": [
    "./src"
  ]
}
